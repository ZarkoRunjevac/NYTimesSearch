<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/theme_red_primary</item>
    <item name="colorPrimaryDark">@color/theme_red_primary_dark</item>
    <item name="colorAccent">@color/theme_red_accent</item>

  </style>

  <style name="SearchFilterDialog" parent="Theme.AppCompat.Light.Dialog">

      <item name="android:windowAnimationStyle">@null</item>
      <item name="android:backgroundDimEnabled">false</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:windowMinWidthMajor">90%</item>
      <item name="android:windowMinWidthMinor">90%</item>

  </style>

    <style name="NYTimesSearch.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/theme_text_dark</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="android:textColorPrimary">@color/theme_red_text</item>
        <item name="colorAccent">@color/theme_red_accent</item>
        <item name="colorPrimaryDark">@color/theme_red_primary_dark</item>
        <item name="android:background">@color/theme_red_background</item>

    </style>

</resources>
